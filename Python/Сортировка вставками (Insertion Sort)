def insertion_sort(arr):
    """Сортирует массив методом вставки."""
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1

        # Перемещаем элементы arr[0..i-1], которые больше key
        # на одну позицию вперед
        while j >= 0 and arr[j] > key:
            arr[j + 1] = arr[j]
            j = j - 1
        arr[j + 1] = key

def print_array(arr):
    """Выводит элементы массива."""
    print(*arr) # Используем распаковку списка для вывода в одну строку

# Пример использования
if __name__ == "__main__":
    arr = [12, 11, 13, 5, 6]

    print("Исходный массив:", end=" ")
    print_array(arr)

    insertion_sort(arr)

    print("Отсортированный массив:", end=" ")
    print_array(arr)
